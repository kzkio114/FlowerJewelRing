<h1>管理者ダッシュボード</h1>

<h2>ユーザー一覧</h2>
<% @users.each do |user| %>
  <div id="<%= dom_id(user) %>">
    <p>
      <%= user.name %>
      <% if current_user.super_admin? || current_user.admin? %>
        <%= button_to '削除', admin_user_path(user), method: :delete, data: { turbo_confirm: '本当にこのユーザーを削除しますか？' }, remote: true, form: { data: { turbo: true } } %>
      <% end %>
    </p>
  </div>
<% end %>

