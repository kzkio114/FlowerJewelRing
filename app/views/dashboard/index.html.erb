<div data-controller="modal">
<div class="columns is-mobile is-centered">
  <div class="column is-2 mr-5">
    <div id="menu">
      <%= render "buttons/menu/menu_buttons" %>
    </div>
  </div>
  <div class="column is-flex is-align-items-start">
    <section class="section is-fullheight">
      <div class="container is-flex is-flex-direction-column">
        <div id="content">
          <% if flash[:notice] == 'ユーザーは正常に更新されました。' %>
            <div class="notification is-success info-fixed-error-height ml-5 mb-5">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <%= render "buttons/menu/info_response", unread_gifts_count: @unread_gifts_count %>
        </div>
      </div>
    </section>
  </div>
</div>


<div data-modal-target="modalContainer" class="modal">
  <div class="modal-background"></div>
    <div class="modal-content">
      <p class="image">
        <img data-modal-target="modalImage" src="" alt="拡大画像" class="is-clickable">
      </p>
    </div>
  <button class="modal-close is-large" aria-label="close" data-action="click->modal#close"></button>
</div>