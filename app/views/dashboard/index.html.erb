<div class="columns is-mobile is-centered">
  <div class="column is-2 mr-5">
    <div id="menu">
      <%= render "buttons/menu/menu_buttons" %>
    </div>
  </div>
  <div class="column is-flex is-align-items-start">
    <section class="section is-fullheight">
      <div class="container is-flex is-flex-direction-column">
        <div id="content">
          <% if flash[:notice] == 'ユーザーは正常に更新されました。' %>
            <div class="notification is-success">
              <%= flash[:notice] %>
            </div>
          <% end %>
           <%= render "elasticsearch" %>
          <%= render "buttons/menu/info_response", unread_gifts_count: @unread_gifts_count %>
        </div>
      </div>
    </section>
  </div>
</div>
