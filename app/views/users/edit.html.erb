<div class="user-show container is-small">

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div class="notification is-danger">
        <h2><%= pluralize(@user.errors.count, "エラー") %>が発生しました:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mt-1">
      <%= f.label :name, "名前", class: 'label' %>
      <%= f.text_field :name, class: 'input', placeholder: '名前を入力してください' %>
    </div>

    <div class="field">
      <%= f.label :display_name, "プライベートチャット用表示名", class: 'label' %>
      <%= f.text_field :display_name, class: 'input', readonly: true %>
      <!-- 編集可能にしたい場合は、readonly: true を削除 -->
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス", class: 'label' %>
      <%= f.email_field :email, class: 'input', placeholder: 'メールアドレスを入力してください' %>
    </div>

    <%= f.fields_for :profile do |p| %>
      <div class="field">
        <%= p.label :introduction, "自己紹介", class: 'label' %>
        <%= p.text_area :introduction, class: 'textarea', placeholder: '自己紹介を入力してください' %>
      </div>

      <div class="field">
        <%= p.label :interests, "興味・関心", class: 'label' %>
        <%= p.text_area :interests, class: 'textarea', placeholder: '興味・関心を入力してください' %>
      </div>
    <% end %>
    <div class="user-buttons-right" >
    <div class="field is-flex is-justify-content-flex-end mt-2">
      <%= f.submit "更新", class: 'button is-primary is-small' %>
      <%= link_to '戻る', user_path(current_user), class: 'button is-info is-small ml-2' %>
    </div>
    </div>
  <% end %>

</div>