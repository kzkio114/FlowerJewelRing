<div id="content" class="container is-small frame-fixed-height has-background-primary">
  みんなの悩み！
  <div class="has-text-white">
    <% if @consultations.nil? %>
      <p>現在、コンサルテーションはありません。</p>
    <% else %>
      <div class="columns is-multiline">
        <% @consultations.each do |consultation| %>
        <div class="column is-one-third">
            <div id="<%= dom_id(consultation) %>">
              <%= button_to "#{consultation.title} (#{consultation.category.name})", consultations_response_consultation_path(consultation), method: :post, data: { turbo_frame: "content" }, class: "button is-fullwidth" %>
              <!-- ここに詳細が非同期で表示されます -->
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
  <!-- 新しいコンサルテーションを作成するためのフォームを追加 -->
  <div class="container is-small">
    <div class="columns">
      <div class="column is-offset-3 is-6">
        <%= form_with(model: Consultation.new, url: consultations_path, local: true) do |form| %>
          <div class="field">
            <%= form.label :title, class: "label" %>
            <div class="control">
              <%= form.text_field :title, class: "input" %>
            </div>
          </div>

          <div class="field">
            <%= form.label :content, class: "label" %>
            <div class="control">
              <%= form.text_area :content, class: "textarea" %>
            </div>
          </div>

          <!-- ユーザーがカテゴリーを選択できるようにします -->
          <div class="field">
            <%= form.label :category_id, class: "label" %>
            <div class="control">
              <%= form.collection_select :category_id, Category.all, :id, :name, {}, {class: "select"} %>
            </div>
          </div>

          <!-- 現在ログインしているユーザーのIDを自動的に設定します -->
          <%= form.hidden_field :user_id, value: current_user.id %>

          <div class="field is-grouped is-grouped-right">
            <div class="control">
              <%= form.submit "投稿", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>