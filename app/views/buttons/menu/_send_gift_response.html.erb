<div id="content" class="container is-small frame-fixed-height has-background-info">
  <div class="columns is-multiline">
  <% gifts.each do |gift| %>
    <div class="column is-one-third">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            カテゴリ: <%= gift.gift_category.name %>
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            植物名: <%= gift.item_name %><br>
            <img src="<%= gift.image_url %>" alt="ギフトの画像"><br>
            花言葉: <%= gift.message %>
            <br>
            <turbo-frame id="send_gift_frame_<%= gift.id %>">
              <%= button_to 'このギフトを送る', send_gift_gift_path(gift), method: :post, data: { turbo_frame: "send_gift_frame" }, class: "button is-primary is-small" %>
            </turbo-frame>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
