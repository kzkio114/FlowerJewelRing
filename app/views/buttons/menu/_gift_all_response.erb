<div id="content" class="container is-small">
  <div class="columns is-multiline gift-list-height">
    <div class="column is-full">
      <div class="level">
        <div class="level-left">
          <h3 class="title is-size-3">感謝の気持ち一覧</h3>
        </div>
        <div class="level-right buttons-right">
          <%= button_to '現在のギフト', buttons_send_gift_response_path, method: :post, class: 'button is-primary is-small custom-long-left mt-5' , data: { turbo_frame: 'content' } %>
        </div>
      </div>
    </div>
    <% @gift_templates.each do |template| %>
      <div id="gift_card_<%= template.id %>" class="column is-one-third">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              カテゴリ: <%= template.gift_category.name %>
            </p>
          </header>
          <div class="card-content">
            <div class="content">
              植物名: <%= template.name %><br>
              <%= image_tag asset_path(template.image_url), alt: "ギフトの画像", style: "width: 200px;" , data: { action: "click->modal#open" } %><br>
              花言葉: <%= template.description %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
