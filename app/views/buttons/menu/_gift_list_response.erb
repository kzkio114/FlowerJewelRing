<div id="content" class="container is-small frame-fixed-height has-background-danger">
  <div style="overflow-y: auto; max-height: 80%;">
    花と宝石達現在のギフト総数: <%= @total_gifts %>
  </div>
  <% if @total_gifts > 250 %>
    <%= image_tag "6.webp", style: 'max-width: 100%; max-height: 95%;' %>
  <% elsif @total_gifts > 200 %>
    <%= image_tag "5.webp", style: 'max-width: 100%; max-height: 95%;' %>
  <% elsif @total_gifts > 150 %>
    <%= image_tag "4.webp", style: 'max-width: 100%; max-height: 95%;' %>
  <% elsif @total_gifts > 100 %>
    <%= image_tag "3.webp", style: 'max-width: 100%; max-height: 95%;' %>
  <% elsif @total_gifts > 50 %>
    <%= image_tag "2.webp", style: 'max-width: 100%; max-height: 95%;' %>
  <% else %>
    <%= image_tag "1.webp", style: 'max-width: 100%; max-height: 95%;' %>
  <% end %>
</div>