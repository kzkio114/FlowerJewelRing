<div id="content" class="frame-fixed-height container is-small">
<%= form_with url: search_response_path, method: :post, local: false do %>
  <div>
    <%= label_tag :query, "検索" %>
    <%= text_field_tag :query, params[:query] %>
  </div>
  <div>
    <%= submit_tag "検索" %>
  </div>
<% end %>

<h2>検索結果</h2>
<% if @consultations.any? %>
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>説明</th>
        <th>カテゴリ</th>
        <th>ユーザー</th>
      </tr>
    </thead>
    <tbody>
      <% @consultations.each do |consultation| %>
        <tr>
          <td><%= highlight(consultation.title, params[:query]) %></td>
          <td><%= highlight(consultation.content, params[:query]) %></td>
          <td><%= highlight(consultation.category.name, params[:query]) %></td>
          <td><%= highlight(consultation.user.name, params[:query]) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>検索結果が見つかりませんでした。</p>
<% end %>

</div>